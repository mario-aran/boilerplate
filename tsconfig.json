{
  "compilerOptions": {
    "target": "ES2022",
    "module": "commonjs",
    "rootDir": "./src",
    "outDir": "./dist",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true,

    // Linting
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noFallthroughCasesInSwitch": true,
    "noUncheckedSideEffectImports": true,

    // Types
    "types": [
      "vitest/globals" // "vitest"
    ],

    // Path aliases
    "baseUrl": "./",
    "paths": { "@/*": ["./src/*"] }
  },
  "include": ["src"]
}
