{
  "compilerOptions": {
    // Base
    "target": "ES2022",
    "module": "commonjs",
    "rootDir": "./src",
    "outDir": "./dist",

    // Compatibility
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true,

    // Linting
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noFallthroughCasesInSwitch": true,
    "noUncheckedSideEffectImports": true,

    // Path aliases
    "baseUrl": ".",
    "paths": { "@/*": ["src/*"] }
  },

  // Files inclusion
  "include": ["src"]
}
