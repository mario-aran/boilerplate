{
  "name": "api",
  "private": true,
  "engines": {
    "node": ">=22",
    "pnpm": ">=10"
  },
  "scripts": {
    "dev": "tsoa spec-and-routes && tsx watch src/index.ts",
    "build": "tsoa spec-and-routes && tsc && tsc-alias",
    "start": "node dist/index.js",
    "format": "prettier --write .",
    "lint": "tsc --noEmit && eslint . --fix",
    "test": "vitest --watch",
    "test:coverage": "vitest run --coverage",
    "tsoa:generate": "tsoa spec-and-routes",
    "db:generate": "drizzle-kit generate",
    "db:migrate": "drizzle-kit migrate",
    "db:seed:fake": "tsx src/scripts/seeds/seed-fake-data.ts",
    "db:seed:initial": "node dist/scripts/seeds/seed-initial-data.js",
    "clean:all": "find . -type d \\( -name 'node_modules' -o -name 'dist' -o -name 'coverage' \\) -prune -exec rm -rf {} + && rm -f *tsbuildinfo*",
    "files:to-lf": "find . -type f \\( ! -path './node_modules/*' -a ! -path './dist/*' -a ! -path './coverage/*' \\) -exec dos2unix {} +"
  },
  "dependencies": {
    "@tsoa/runtime": "^6.6.0",
    "bcryptjs": "^3.0.2",
    "cookie-parser": "^1.4.7",
    "cors": "^2.8.5",
    "drizzle-orm": "^0.43.1",
    "express": "^5.1.0",
    "jsonwebtoken": "^9.0.2",
    "passport": "^0.7.0",
    "passport-jwt": "^4.0.1",
    "pg": "^8.15.6",
    "swagger-ui-express": "^5.0.1",
    "zod": "^3.24.4"
  },
  "devDependencies": {
    "@eslint/js": "^9.26.0",
    "@faker-js/faker": "^9.7.0",
    "@types/cookie-parser": "^1.4.8",
    "@types/cors": "^2.8.17",
    "@types/express": "^5.0.1",
    "@types/jsonwebtoken": "^9.0.9",
    "@types/node": "^22.15.14",
    "@types/passport": "^1.0.17",
    "@types/passport-jwt": "^4.0.1",
    "@types/pg": "^8.15.0",
    "@types/supertest": "^6.0.3",
    "@types/swagger-ui-express": "^4.1.8",
    "@vitest/coverage-v8": "^3.1.3",
    "dotenv": "^16.5.0",
    "drizzle-kit": "^0.31.1",
    "eslint": "^9.26.0",
    "eslint-config-prettier": "^10.1.2",
    "eslint-plugin-check-file": "^3.2.0",
    "globals": "^16.0.0",
    "prettier": "^3.5.3",
    "supertest": "^7.1.0",
    "tsc-alias": "^1.8.16",
    "tsoa": "^6.6.0",
    "tsx": "^4.19.4",
    "typescript": "^5.8.3",
    "typescript-eslint": "^8.32.0",
    "vitest": "^3.1.3"
  }
}
